<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/main_color_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/main_color_700</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/main_accent_500</item>

    </style>

    <style name="CustomToolbarStyle" parent="AppTheme.Base">
        <item name="android:textColorSecondary">@color/toolbar_white</item>
    </style>

    <style name="FullscreenDialogStyle" parent="AppTheme.Base">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:textColorPrimary">@color/toolbar_white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

</resources>
